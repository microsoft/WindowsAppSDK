<Window
    x:Class="StoragePickersTestApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StoragePickersTestApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Storage Pickers Test App">

    <Grid Padding="12">
        <Grid.Resources>
            <!-- Shared style for new API option checkboxes -->
            <Style x:Key="NewApiCheckBoxStyle" TargetType="CheckBox">
                <Setter Property="Padding" Value="4"/>
                <Setter Property="ContentTemplate">
                    <Setter.Value>
                        <DataTemplate>
                            <Border Background="#b9e1f1" Padding="4" CornerRadius="4">
                                <TextBlock Text="{Binding}"/>
                            </Border>
                        </DataTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Column: Controls and Tabs -->
        <Grid Grid.Column="0" RowSpacing="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header and Shared Controls -->
            <StackPanel Grid.Row="0" Spacing="8" BorderThickness="0,0,0,1" BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}" Padding="0,0,0,12">
                <TextBlock Text="Storage Pickers Test App" FontSize="24" FontWeight="Bold" Margin="0,0,0,8"/>
                
                <TextBlock Text="Shared Attributes (all pickers)" FontWeight="SemiBold" Margin="0,12,0,0"/>
                
                <Grid ColumnSpacing="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- SuggestedStartLocation -->
                    <StackPanel Orientation="Vertical" Spacing="4" Grid.Column="0">
                        <CheckBox x:Name="SuggestedStartLocationCheckBox" Content="SuggestedStartLocation"/>
                        <ComboBox x:Name="StartLocationComboBox" SelectedIndex="2" HorizontalAlignment="Stretch">
                            <ComboBoxItem Content="DocumentsLibrary"/>
                            <ComboBoxItem Content="ComputerFolder"/>
                            <ComboBoxItem Content="Desktop"/>
                            <ComboBoxItem Content="Downloads"/>
                            <ComboBoxItem Content="HomeGroup (UWP only)"/>
                            <ComboBoxItem Content="MusicLibrary"/>
                            <ComboBoxItem Content="PicturesLibrary"/>
                            <ComboBoxItem Content="VideosLibrary"/>
                            <ComboBoxItem Content="Objects3D"/>
                            <ComboBoxItem Content="Unspecified"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- SuggestedStartFolder (new API only) -->
                    <StackPanel Orientation="Vertical" Spacing="4" Grid.Column="1">
                        <CheckBox x:Name="SuggestedStartFolderCheckBox" Content="SuggestedStartFolder (new API)" Style="{StaticResource NewApiCheckBoxStyle}"/>
                        <TextBox x:Name="SuggestedStartFolderInput" PlaceholderText="Try to this location on first launch after installation" HorizontalAlignment="Stretch"/>
                    </StackPanel>
                </Grid>

                <Grid ColumnSpacing="16" Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- SettingsIdentifier -->
                    <StackPanel Orientation="Vertical" Spacing="4" Grid.Column="0">
                        <CheckBox x:Name="SettingsIdCheckBox" Content="SettingsIdentifier"/>
                        <TextBox x:Name="SettingsIdInput" PlaceholderText="Settings ID" Text="TestSettings1"/>
                    </StackPanel>

                    <!-- SuggestedFolder (new API only) -->
                    <StackPanel Orientation="Vertical" Spacing="4" Grid.Column="1">
                        <CheckBox x:Name="SuggestedFolderCheckBox" Content="SuggestedFolder (new API)" Style="{StaticResource NewApiCheckBoxStyle}"/>
                        <TextBox x:Name="SuggestedFolderInput" PlaceholderText="Always try to open this location" HorizontalAlignment="Stretch"/>
                    </StackPanel>
                </Grid>
                <StackPanel Orientation="Horizontal" Spacing="16">
                    <!-- Title (new API only) -->
                    <StackPanel Orientation="Vertical" Spacing="4" Width="200">
                        <CheckBox x:Name="TitleCheckBox" Content="Title (new API)" Style="{StaticResource NewApiCheckBoxStyle}"/>
                        <TextBox x:Name="TitleInput" PlaceholderText="Picker title" Text="Pick a file"/>
                    </StackPanel>

                    <!-- CommitButtonText -->
                    <StackPanel Orientation="Vertical" Spacing="4" Width="200">
                        <CheckBox x:Name="CommitButtonCheckBox" Content="CommitButtonText"/>
                        <TextBox x:Name="CommitButtonTextInput" PlaceholderText="Button text" Text="Select"/>
                    </StackPanel>

                    <!-- ViewMode -->
                    <StackPanel Orientation="Vertical" Spacing="4" Width="200">
                        <CheckBox x:Name="ViewModeCheckBox" Content="ViewMode"/>
                        <ComboBox x:Name="ViewModeComboBox" SelectedIndex="0" HorizontalAlignment="Stretch">
                            <ComboBoxItem Content="List"/>
                            <ComboBoxItem Content="Thumbnail"/>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>

            </StackPanel>

            <!-- Tab View for Picker Types -->
            <TabView Grid.Row="1" IsAddTabButtonVisible="False" TabWidthMode="Equal">
                <TabView.TabItems>

                    <!-- FileOpenPicker Tab -->
                    <TabViewItem Header="FileOpenPicker" IsClosable="False">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="12">
                            <StackPanel Spacing="12">
                                <!-- FileTypeFilter -->
                                <StackPanel Spacing="4">
                                    <CheckBox x:Name="FileTypeFilterCheckBox" Content="FileTypeFilter" />
                                    <TextBox x:Name="FileTypeFilterInput" PlaceholderText="e.g., .jpg,.png,.txt" />
                                </StackPanel>

                                <!-- FileTypeChoices (new API) -->
                                <StackPanel Spacing="4">
                                    <CheckBox x:Name="OpenPickerFileTypeChoicesCheckBox" Content="FileTypeChoices (new API)" Style="{StaticResource NewApiCheckBoxStyle}"/>
                                    <TextBox x:Name="OpenPickerFileTypeChoicesInput" 
                                             PlaceholderText="JSON format"
                                             TextWrapping="Wrap" Height="50"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Spacing="16">
                                    <!-- InitialFileTypeIndex (new API only) -->
                                    <StackPanel Spacing="4" Width="300">
                                        <CheckBox x:Name="OpenInitialFileTypeIndexCheckBox" Content="InitialFileTypeIndex (new API)" Style="{StaticResource NewApiCheckBoxStyle}"/>
                                        <TextBox x:Name="OpenInitialFileTypeIndexInput" Text="0" InputScope="Number"/>
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Spacing="16">
                                    <StackPanel Orientation="Vertical" Spacing="16">
                                        <TextBlock Text="Pick Single File" FontWeight="SemiBold" Margin="0,8,0,0"/>
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <Button Content="UWP Picker" Click="UwpPickSingleFile_Click" Width="150"/>
                                            <Button Content="New Picker" Click="NewPickSingleFile_Click" Width="150" Style="{ThemeResource AccentButtonStyle}"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!--a vertical line-->
                                    <Rectangle Width="1" Fill="{ThemeResource DividerStrokeColorDefaultBrush}" Margin="16,0"/>

                                    <StackPanel Orientation="Vertical" Spacing="16">
                                        <TextBlock Text="Pick Multiple Files" FontWeight="SemiBold" Margin="0,8,0,0"/>
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <Button Content="UWP Picker" Click="UwpPickMultipleFiles_Click" Width="150"/>
                                            <Button Content="New Picker" Click="NewPickMultipleFiles_Click" Width="150" Style="{ThemeResource AccentButtonStyle}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </TabViewItem>

                    <!-- FileSavePicker Tab -->
                    <TabViewItem Header="FileSavePicker" IsClosable="False">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="12">
                            <StackPanel Spacing="12">

                                <StackPanel Orientation="Horizontal" Spacing="16">
                                    <!-- SuggestedFileName -->
                                    <StackPanel Spacing="4" Width="200">
                                        <CheckBox x:Name="SuggestedFileNameCheckBox" Content="SuggestedFileName" />
                                        <TextBox x:Name="SuggestedFileNameInput" Text="MyDocument" />
                                    </StackPanel>

                                    <!-- DefaultFileExtension -->
                                    <StackPanel Spacing="4" Width="200">
                                        <CheckBox x:Name="DefaultFileExtensionCheckBox" Content="DefaultFileExtension"/>
                                        <TextBox x:Name="DefaultFileExtensionInput" Text=".txt"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- FileTypeChoices -->
                                <StackPanel Spacing="4">
                                    <CheckBox x:Name="SavePickerFileTypeChoicesCheckBox" Content="FileTypeChoices" />
                                    <TextBox x:Name="SavePickerFileTypeChoicesInput" 
                                             PlaceholderText="JSON format"
                                             TextWrapping="Wrap" Height="50"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Spacing="16">
                                    <!-- InitialFileTypeIndex (new API only) -->
                                    <StackPanel Spacing="4" Width="300">
                                        <CheckBox x:Name="SaveInitialFileTypeIndexCheckBox" Content="InitialFileTypeIndex (new API)" Style="{StaticResource NewApiCheckBoxStyle}"/>
                                        <TextBox x:Name="SaveInitialFileTypeIndexInput" Text="0" InputScope="Number"/>
                                    </StackPanel>

                                    <!-- ShowOverwritePrompt (new API only) -->
                                    <StackPanel Spacing="4" Width="300">
                                        <CheckBox x:Name="ShowOverwritePromptCheckBox" Content="ShowOverwritePrompt (new API)" Style="{StaticResource NewApiCheckBoxStyle}"/>
                                        <ComboBox x:Name="ShowOverwritePromptComboBox" SelectedIndex="0">
                                            <ComboBoxItem Content="True"/>
                                            <ComboBoxItem Content="False"/>
                                        </ComboBox>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Test Buttons -->
                                <TextBlock Text="Pick Save File" FontWeight="SemiBold" Margin="0,8,0,0"/>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <Button Content="UWP Picker" Click="UwpPickSaveFile_Click" Width="150"/>
                                    <Button Content="New Picker" Click="NewPickSaveFile_Click" Width="150" Style="{ThemeResource AccentButtonStyle}"/>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </TabViewItem>

                    <!-- FolderPicker Tab -->
                    <TabViewItem Header="FolderPicker" IsClosable="False">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="12">
                            <StackPanel Spacing="12">

                                <!-- Test Buttons -->
                                <TextBlock Text="Pick Single Folder" FontWeight="SemiBold" Margin="0,8,0,0"/>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <Button Content="UWP Picker" Click="UwpPickFolder_Click" Width="150"/>
                                    <Button Content="New Picker" Click="NewPickFolder_Click" Width="150" Style="{ThemeResource AccentButtonStyle}"/>
                                </StackPanel>

                                <TextBlock Text="Pick Multiple Folders (new API only)" FontWeight="SemiBold" Margin="0,8,0,0"/>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <Button Content="New Picker" Click="NewPickMultipleFolders_Click" Width="150" Style="{ThemeResource AccentButtonStyle}"/>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </TabViewItem>

                </TabView.TabItems>
            </TabView>
        </Grid>

        <!-- Right Column: Results Log -->
        <Grid Grid.Column="1" Padding="12,0,0,0" RowSpacing="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Spacing="8" Grid.Row="0">
                <TextBlock Text="Results Log" FontSize="20" FontWeight="SemiBold" VerticalAlignment="Center"/>
                <Button Content="Clear" Click="ClearLog_Click" VerticalAlignment="Center"/>
            </StackPanel>

            <Border Grid.Row="1" BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="4">
                <ScrollViewer VerticalScrollBarVisibility="Visible" Padding="8">
                    <TextBlock x:Name="ResultsTextBlock" TextWrapping="Wrap" IsTextSelectionEnabled="True"/>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Window>
