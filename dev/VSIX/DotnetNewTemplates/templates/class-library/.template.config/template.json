{
  "$schema": "https://json.schemastore.org/template",
  "author": "Microsoft",
  "classifications": ["Windows", "WinUI", "Library"],
  "identity": "Microsoft.WindowsAppSDK.CSharp.ClassLibrary",
  "groupIdentity": "Microsoft.WindowsAppSDK.CSharp.ClassLibrary",
  "name": "Windows App SDK Class Library",
  "shortName": "wasdk-classlib",
  "sourceName": "ProjectTemplate",
  "defaultName": "WinAppSdkLibrary",
  "description": "Creates a WinUI 3 class library that targets the Windows App SDK.",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "preferNameDirectory": true,
  "constraints": {
    "windows-only": {
      "type": "os",
      "args": "Windows"
    }
  },
  "symbols": {
    "safeProjectName": {
      "type": "derived",
      "valueSource": "name",
      "valueTransform": "safe_name",
      "replaces": "$safeprojectname$"
    },
    "projectName": {
      "type": "derived",
      "valueSource": "name",
      "valueTransform": "identity",
      "replaces": "$projectname$"
    },
    "dotnetVersion": {
      "type": "parameter",
      "datatype": "text",
      "replaces": "$DotNetVersion$",
      "defaultValue": "net9.0",
      "description": "Base target framework moniker (TFM) for the WinUI project."
    }
  },
  "primaryOutputs": [
    { "path": "ProjectTemplate/ProjectTemplate.csproj" }
  ],
  "forms": {
    "safe_name": {
      "identifier": "safe_name"
    },
    "identity": {
      "identifier": "identity"
    }
  },
  "postActions": [
    {
      "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
      "continueOnError": true,
      "description": "Restore NuGet packages required by this project.",
      "manualInstructions": [{ "text": "Run 'dotnet restore'" }]
    }
  ]
}
