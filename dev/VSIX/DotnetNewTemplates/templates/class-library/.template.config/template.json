{
  "$schema": "http://json.schemastore.org/template",
  "author": "Microsoft",
  "classifications": ["Windows", "WinUI", "Library"],
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "identity": "Microsoft.WinUI.ClassLibrary",
  "groupIdentity": "Microsoft.WinUI.ClassLibrary",
  "name": "WinUI Class Library",
  "shortName": "winui-lib",
  "shortNameList": ["wasdk-classlib"],
  "sourceName": "ProjectTemplate",
  "defaultName": "WinUILibrary",
  "description": "Creates a WinUI 3 class library for sharing UI components.",
  "preferNameDirectory": true,
  "symbols": {
    "safeProjectName": {
      "type": "derived",
      "valueSource": "name",
      "valueTransform": "safe_name",
      "replaces": "$safeprojectname$"
    },
    "projectName": {
      "type": "derived",
      "valueSource": "name",
      "valueTransform": "identity",
      "replaces": "$projectname$"
    },
    "dotnetVersion": {
      "type": "parameter",
      "datatype": "text",
      "replaces": "$DotNetVersion$",
      "defaultValue": "net8.0"
    }
  },
  "primaryOutputs": [
    { "path": "ProjectTemplate.csproj" }
  ],
  "forms": {
    "safe_name": {
      "identifier": "safe_name"
    },
    "identity": {
      "identifier": "identity"
    }
  }
}
